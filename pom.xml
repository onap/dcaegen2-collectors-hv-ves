            </dependency>
            <dependency>
                <groupId>org.onap.dcaegen2.services.sdk</groupId>
                <artifactId>hvvesclient-producer-impl</artifactId>
                <version>${sdk.version}</version>
                <scope>runtime</scope>
            </dependency>
            <dependency>
                <groupId>org.onap.dcaegen2.services.sdk</groupId>
                <artifactId>hvvesclient-producer-api</artifactId>
